    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="back-image">
      <main>
        <%= yield %>
      </main>
    </div>
    <footer>
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>