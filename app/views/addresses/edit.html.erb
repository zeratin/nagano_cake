<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <h2>配送先編集</h2>
      <%= form_with model: @address, local:true do |f| %>

        <div class="form-group">
          <label class="col-xs-4 control-label">郵便番号(ハイフンなし)</label>
          <div class="col-xs-6">
            <%= f.text_field :postal_code, class: 'form-control' %>
          </div>
          <div class="col-xs-2"></div>
        </div>
        <div class="form-group">
          <label class="col-xs-4 control-label">住所</label>
          <div class="col-xs-8">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-xs-4 control-label">宛名</label>
          <div class="col-xs-6">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="col-xs-2"></div>
        </div>

        <div class="address-update-btn col-xs-12">
          <%= f.submit '編集する', class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
    <div class="col-xs-1"></div>
  </div>
</div>