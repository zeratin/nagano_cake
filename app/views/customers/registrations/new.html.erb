<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :'名前(姓)'%><br />
    <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :'(名)'%><br />
    <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
  </div>

   <div class="field">
    <%= f.label :'フリガナ(セイ)'%><br />
    <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :'(メイ)'%><br />
    <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :'郵便番号(ハイフンなし)'%><br />
    <%= f.text_field :postal_code, autofocus: true, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所%><br />
    <%= f.text_field :address, autofocus: true, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :'電話番号(ハイフンなし)'%><br />
    <%= f.text_field :phone_number, autofocus: true, class: "phone_number" %>
  </div>
  <div class="field">
    <%= f.label :パスワード%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

  <h3>既に登録済みの方</h3>
<% end %>

<%= render "customers/shared/links" %>
