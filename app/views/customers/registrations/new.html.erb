<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <div class="devise_box">
      <div class="col-xs-6 col-xs-offset-2">
        <h3>新規会員登録</h3>
      </div>
      <div class="col-xs-8 col-xs-offset-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

          <div class="devise_field">
            <%= f.label :'名前(姓)'%>
            <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
            <%= f.label :'(名)'%>
            <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
          </div>

           <div class="devise_field">
            <%= f.label :'フリガナ(セイ)'%>
            <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %>
            <%= f.label :'(メイ)'%>
            <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
          </div>

          <div class="devise_field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="devise_field">
            <%= f.label :'郵便番号(ハイフンなし)'%>
            <%= f.text_field :postal_code, autofocus: true, class: "postal_code" %>
          </div>

          <div class="devise_field">
            <%= f.label :住所%>
            <%= f.text_field :address, autofocus: true, class: "address" %>
          </div>

          <div class="devise_field">
            <%= f.label :'電話番号(ハイフンなし)'%>
            <%= f.text_field :phone_number, autofocus: true, class: "phone_number" %>
          </div>

          <div class="devise_field">
            <%= f.label :パスワード%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="devise_field">
            <%= f.label :'パスワード(確認用)' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h3>既に登録済みの方</h3>
    </div>
    <div class="col-xs-8 col-xs-offset-3">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
