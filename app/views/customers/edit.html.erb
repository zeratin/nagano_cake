<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">


      <h3>登録情報編集</h3>

      <%= form_with model: @customer do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <th>
            <form class="form-horizontal">
      		      <div class="">
      			      姓<%= f.text_field :first_name, class: 'form-control' %>
      		      </div>
      	    </form>
      	  </th>
      	  <th>
      	    <form class="form-horizontal">
      		      <div class="">
      			      名<%= f.text_field :last_name, class: 'form-control' %>
      		      </div>
             </form>
      	  </th>
        </tr>

        <tr>
          <th>フリガナ</th>
          <th>
            <form class="form-horizontal">
      		      <div class="">
      		    	  セイ<%= f.text_field :first_name_kana, class: 'form-control' %>
      	       	</div>
            </form>
          </th>
          <th>
            <form class="form-horizontal">
      		      <div class="">
      		    	  メイ<%= f.text_field :last_name_kana, class: 'form-control' %>
      	       	</div>
            </form>
          </th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th>
  	      	<div class="">
  			      <%= f.text_field :email, class: 'form-control' %>
  		      </div>
          </th>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th>
  		      <div class="">
  		      	<%= f.text_field :postal_code, class: 'form-control' %>
  		      </div>
          </th>
        </tr>
        <tr>
          <th>住所</th>
          <th>
  	      	<div class="">
  		      	<%= f.text_field :address, class: 'form-control' %>
  		      </div>
          </th>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <th>
  	      	<div class="">
  		      	<%= f.text_field :phone_number, class: 'form-control' %>
  	      	</div>
          </th>
        </tr>
        <tr>
          <th>
            <%= f.submit '編集内容を保存する', class: 'btn btn-primary' %>
          </th>
          <th>
            <%= link_to "退会する", customer_unsubscribe_path(current_customer), class: "btn btn-danger" %>
          </th>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col-xs-1">
    </div>
  </div>
</div>