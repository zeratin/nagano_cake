<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
<h4>マイページ</h4>
  <tr>
    <th>登録情報</th>
    <th><%= link_to '編集する', edit_customer_path, class: "btn btn-primary" %></th>
    <th><%= link_to 'パスワードを変更する', edit_customer_password_path, class: "btn btn-primary" %></th>
  </tr>


<table class="table table-bordered">
  <tbody>
    <tr>
      <th class="col-sm-3">名前</th>
      <th class="col-sm-9"><%= @customer.full_name %></th>
      <!--あとで変えたいです-->
    </tr>

    <tr>
      <th>カナ</th>
      <th><%= @customer.full_name_kana %></th>
    </tr>

    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>

    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>

    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
  </tbody>
</table>

<tr>
  <th>配送先</th>
  <th><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %></th>
</tr>

<tr>
  <th>注文履歴</th>
  <th><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></th>
</tr>

</div>
</div>