
<h4>マイページ</h4>

<table class="table">
  <thead>
    <tr>
      <th>登録情報</th>
      <th><%= link_to '編集する', edit_customer_path, class: "btn btn-primary" %></th>
      <th>パスワードを変更する</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>名前</th>
      <th><%= @customer.first_name %></th>
      <th><%= @customer.last_name %></th>
    </tr>

    <tr>
      <th>カナ</th>
      <th><%= @customer.first_name_kana %></th>
      <th><%= @customer.last_name_kana %></th>
    </tr>

    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>

    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>

    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
  </tbody>
</table>

<tr>
  <th>配送先</th>
  <th><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %></th>
</tr>

<tr>
  <th>注文履歴</th>
  <th><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></th>
</tr>