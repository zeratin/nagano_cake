<%= render 'layouts/admin_header' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>商品新規登録</h3>
      <%= form_with model:@item, url: admins_items_path, method: :post, class: "form-horizontal", local:true do |f| %>
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="col-xs-6">
          .prev-content
          <%= f.attachment_field :image %>
        </div>
        <div class="col-xs-6">
          <table>
            <div class="form_group">
              <%= f.label :"商品名" %>
              <%= f.text_field :name %>
            </div>
            <div class="form_group">
              <%= f.label :"商品説明" %>
              <%= f.text_area :introduction %>
            </div>
            <div class="form_group">
              <%= f.label :"ジャンル" %>
              <%= f.collection_select :genre_id, Genre.where(is_active: true), :id, :name, include_blank: "--選択してください--" %>
            </div>
            <div class="form_group">
              <%= f.label :"税抜価格" %>
              <%= f.text_field :price %>円
            </div>
            <div class="form_group">
              <%= f.label :"販売ステータス" %>
              <%= f.select :is_active, [["販売中",true],["販売停止中",false]], include_blank: "--選択してください--" %>
            </div>
          </table>
          <div class="actions col-xs-7">
            <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

