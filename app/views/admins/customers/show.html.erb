<%= render 'layouts/admin_header' %>

<div class="container">
  <div class="row">
    <h3><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細</h3>
    <div class="col-xs-6">
      <table class="table">
        <tr>
          <td>顧客ID</td>
          <td>
            <%= @customer.id %>
            <% if @customer.is_deleted == false %>
              <p class="label label-info">有効</p>
            <% else %>
              <p class="label label-danger">退会済み</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="col-xs-4">
        <%= link_to "編集する", edit_admins_customer_path(@customer.id), class: "btn btn-primary" %>
      </div>
      <div class="col-xs-4">
        <%= link_to "注文履歴一覧を見る", edit_admins_customer_path(@customer.id), class: "btn btn-primary" %>
        <!--パス暫定-->
      </div>
    </div>
  </div>
</div>
