<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
        	  <th>購入日時</th>
        	  <th>購入者</th>
        	  <th>注文個数</th>
         	  <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order) %>
              </td>
              <td>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </td>
              <td>
                <% @sum = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% @sum += order_detail.amount %>
                <% end %>
                <%= @sum %>
              </td>
              <td>
                <%= order.status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>