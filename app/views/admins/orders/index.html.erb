<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
      	  <th>購入日時</th>
      	  <th>購入者</th>
      	  <th>注文個数</th>
       	  <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |orders| %>
            <tr>
              <td>
                <%= link_to orders.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(orders.id) %>
              </td>
              <td>
                <%= orders.customer.last_name %><%= orders.customer.first_name %>
              </td>
              <td><%=  %></td>
              <td>
                <%=  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>