<%= render 'layouts/admin_header' %>

<div class="container">
  <div class="row">
    <h3>注文履歴詳細</h3>
    <div class="col-xs-6">
      <table class="table">
        <tr>
          <td>購入者</td>
          <td>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          </td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admins_order_path, local:true do |f| %>
              <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      </table>
      <table class="table">
        <thead>
          <tr>
        	  <th>商品名</th>
        	  <th>単価（税込）</th>
        	  <th>数量</th>
        	  <th>小計</th>
         	  <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
              <td><%= @order.id %></td>
              <td>
                <%= @order.customer.last_name %><%= @order.customer.first_name %>
              </td>
              <td><%= @order.customer.email %></td>
              <td>

              </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
