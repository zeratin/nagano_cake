<%= render 'layouts/header' %>
<div class="container">
  <div class="row">

    <div class="col-xs-3">
        <%= render 'items/search' %>
    </div>

    <div class="col-xs-9">

     <h2>ショッピングカート</h2>
     <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>

     <table class="table table-bordered">

      <thead>
        <tr class="active">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= tax_included_price(cart_item.item.price) %></td>
            <td><%= cart_item.amount %>
                <%= form_with model: cart_item, method: :patch do |f| %>
                  <%= f.text_field :amount %>
                  <%= f.submit '変更', class: 'btn btn-primary' %>
                <% end %>
            </td>
            <td><%= tax_included_price(cart_item.item.price) %>小計</td>

            <td>
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    <h3>合計金額</h3>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>

    </div>
  </div>
</div>