<%= render 'layouts/header' %>
<div class="container">
  <div class="row">

    <div class="col-xs-1">

    </div>

    <div class="col-xs-10">

     <h2>ショッピングカート</h2>
     <div class="destroy-all-btn">
     <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
     </div>

     <table class="table table-bordered">

      <thead>
        <tr class="active">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= tax_included_price(cart_item.item.price) %></td>
            <td><%= form_with model: cart_item, method: :patch, local: true do |f| %>
                  <%= f.text_field :amount, :size=>"5" %>
                  <%= f.submit '変更', class: 'btn btn-primary btn-sm' %>
                <% end %>
            </td>
            <td><%= ((cart_item.item.price * 1.1).round * cart_item.amount).to_s(:delimited) %>
            <% @sum += (cart_item.item.price * 1.1).round* cart_item.amount %></td>

            <td>
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>



    <table class="table table-bordered table-total pull-right">
      <tbody>
        <tr>
          <th class="active">合計金額¥</th>
          <td><%= @sum.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
    <div class="continue-btn">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>

    <div class="order-btn">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>
    </div>

    </div>
    <div class="col-xs-1">

    </div>
  </div>
</div>