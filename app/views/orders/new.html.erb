<h3>注文情報入力</h3>

<div>
  <%= form_with(model:@customer, local: true) do |form| %>
    <%= form.radio_button :payment_method, 0 %>
    <%= form.label :payment_method, "クレジットカード", {value: :male, style: "display: inline-block;"} %>
    <%= form.radio_button :payment_method, 1 %>
    <%= form.label :gender, "銀行振込", {value: :female, style: "display: inline-block;"} %>
</div>

<div>
  <%= form.radio_button :address %>
  <%= form.label :address, "ご自身の住所", {value: :male, style: "display: inline-block;"} %>
  　<%= @customer.address %>
  <%= form.radio_button :address %>
  <%= form.label :address, "登録済住所から選択", {value: :female, style: "display: inline-block;"} %>
  　<div class="form_group">
      <%= f.label :"" %>
      <%= f.collection_select :customer_id, Address.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
  <!--選択フォームへ持ってくる部分がわからない-->
  <%= form.radio_button :address %>
  <%= form.label :address, "新しいお届け先", {value: :female, style: "display: inline-block;"} %>
  <tr>
    <th>郵便番号(ハイフンなし)</th>
    <th>
      <form class="form-horizontal">
	      <div class="form-group">
       		<label class="col-sm-2 control-label" for="InputPostal_code"></label>
		      <div class="col-sm-10">
		      	<%= f.text_field :postal_code, class: 'form-control' %>
		      </div>
      	</div>
    </th>
    <th>住所</th>
    <th>
      <form class="form-horizontal">
	      <div class="form-group">
	      	<label class="col-sm-2 control-label" for="InputAddress"></label>
	      	<div class="col-sm-10">
		      	<%= f.text_field :address, class: 'form-control' %>
	      	</div>
    	</div>
    </th>
     <tr>
    <th>宛名</th>
    <th>
      <form class="form-horizontal">
        <div class="form-group">
		      <label class="col-sm-2 control-label" for="InputFirst_name"></label>
		      <div class="col-sm-10">
			      <%= f.text_field :name, class: 'form-control' %>
		      </div>
	      </div>
	  </th>
 </tr>

 <tr>
    <th>
      <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
    </th>
 </tr>
<% end %>
</div>