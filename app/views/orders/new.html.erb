<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">

      <h3>注文情報入力</h3>
      <div>
        <%= form_with(model: @order, url: '/orders/confirm', method: :post, local: true) do |f| %>

        <h5>支払方法</h5>
          <%= f.radio_button :payment_method, :"0" %>
          <%= f.label :payment_method, "クレジットカード" %><br>
          <%= f.radio_button :payment_method, :"1" %>
          <%= f.label :payment_method, "銀行振込" %>
      </div>

      <div>
        <h5>お届け先</h5>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :address, "ご自身の住所" %>
        <%= current_customer.address %><%= current_customer.full_name %><br>
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :address, "登録済住所から選択" %>
          <div class="form_group">
            <%= f.collection_select :address_id, @addresses, :id, :address_name, include_blank: "--選択してください--" %>
          </div>
        <%= f.radio_button :address_option, 3 %>
        <%= f.label :address, "新しいお届け先" %><br>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th>
            <form class="form-horizontal">
      	      <div class="form-group">
             		<label class="col-sm-2 control-label" for="InputPostal_code"></label>
      		      <div class="col-sm-10">
      		      	<%= f.text_field :postal_code, class: 'form-control' %>
      		      </div>
            	</div>
          </th>
        </tr>
        <tr>
          <th>住所</th>
          <th>
            <form class="form-horizontal">
      	      <div class="form-group">
      	      	<label class="col-sm-2 control-label" for="InputAddress"></label>
      	      	<div class="col-sm-10">
      		      	<%= f.text_field :address, class: 'form-control' %>
      	      	</div>
          	</div>
          </th>
        </tr>
        <tr>
          <th>宛名</th>
          <th>
            <form class="form-horizontal">
              <div class="form-group">
      		      <label class="col-sm-2 control-label" for="InputFirst_name"></label>
      		      <div class="col-sm-10">
      			      <%= f.text_field :name, class: 'form-control' %>
      		      </div>
      	      </div>
      	  </th>
        </tr>
        <tr>
          <th>
            <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
          </th>
        </tr>
      <% end %>
      </div>
    </div>
    <div class="col-xs-1">
    </div>
  </div>
</div>