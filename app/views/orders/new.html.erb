<%= render 'layouts/header' %>
<%= link_to "確認画面へ進む", orders_confirm_path, class: "btn btn-primary" %>
<h3>注文情報入力</h3>

<div>
  <%= form_with(model: @customer, local: true) do |f| %>
  <h5>支払方法</h5>
    <%= f.radio_button :payment_method, 0 %>
    <%= f.label :payment_method, "クレジットカード", {value: :male, style: "display: inline-block;"} %><br>

    <%= f.radio_button :payment_method, 1 %>
    <%= f.label :gender, "銀行振込", {value: :female, style: "display: inline-block;"} %>
</div>

<div>
  <h5>お届け先</h5>
  <%= f.radio_button :address, current_customer %>
  <%= f.label :address, "ご自身の住所", {value: :male, style: "display: inline-block;"} %>
  <%= current_customer.address %><%= current_customer.full_name %><br>
  <%= f.radio_button :address, current_customer %>
  <%= f.label :address, "登録済住所から選択", {value: :female, style: "display: inline-block;"} %>
  　<div class="form_group">
      <%= f.collection_select :customer_id, Address.all, :id, :address_name, include_blank: "--選択してください--" %>
    </div>
  <%= f.radio_button :address, current_customer %>
  <%= f.label :address, "新しいお届け先", {value: :female, style: "display: inline-block;"} %><br>
  <tr>
    <th>郵便番号(ハイフンなし)</th>
    <th>
      <form class="form-horizontal">
	      <div class="form-group">
       		<label class="col-sm-2 control-label" for="InputPostal_code"></label>
		      <div class="col-sm-10">
		      	<%= f.text_field :postal_code, class: 'form-control' %>
		      </div>
      	</div>
    </th>
  </tr>
  <tr>
    <th>住所</th>
    <th>
      <form class="form-horizontal">
	      <div class="form-group">
	      	<label class="col-sm-2 control-label" for="InputAddress"></label>
	      	<div class="col-sm-10">
		      	<%= f.text_field :address, class: 'form-control' %>
	      	</div>
    	</div>
    </th>
  </tr>
  <tr>
    <th>宛名</th>
    <th>
      <form class="form-horizontal">
        <div class="form-group">
		      <label class="col-sm-2 control-label" for="InputFirst_name"></label>
		      <div class="col-sm-10">
			      <%= f.text_field :name, class: 'form-control' %>
		      </div>
	      </div>
	  </th>
  </tr>
  <tr>
    <th>
      <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
      <!--パスがまだ-->
    </th>
  </tr>
<% end %>
</div>
