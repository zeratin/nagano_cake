<h2 class="head-line title_h2 text-center">商品詳細</h2>

<div class="img_field">
  <%= attachment_img_tag(@item, :image, :size "250×180", fallback: "no_image.jpg") %>
</div>

<table>
  <div class="field">
    <p>商品名<%= @item.name %></p>
  </div></br>
  <div class="field">
    <p>商品説明<%= @item.introduction %></p>
  </div></br>
  <div class="field">
    <p>ジャンル<%= @item.genre.name %></p>
  </div></br>
  <div class="field">
    <p>税込価格(税抜価格)<%= tax_included_price(@item.price).to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</p>
  </div></br>
  <div class="field">
    <p>販売ステータス
    <% if @item.is_active == true %><p>販売中</p>
    <% elseif @item.is_active == false %><p>販売停止中</p>
    <% end %>
    </p>
  </div>
</table>
<div class="action">
  <%= link_to "編集する" edit_admin_item_path(@item) %>
</div>