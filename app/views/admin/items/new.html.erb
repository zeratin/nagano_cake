<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= form_with model:@item, url: admin_items_path, method: :post, class: "form-horizontal"), local:true do |f| %>
      <% if resource.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
  	      <%= f.attachment_field :image, class: "image" %>
  	    </div>
      </div>
      <div class="col-xs-6">
       <table>
          <div class="form_group">
            <%= f.label :"商品名" %>
            <%= f.text_field :name %>
          </div>
          <div class="form_group">
            <%= f.label :"商品説明" %>
            <%= f.text_area :introduction %>
          </div>
          <div class="form_group">
            <%= f.label :"ジャンル" %>
            <%= f.collection_select(:genre_
            id, @genres, :id, :name, prompt: "--選択してください--"), class: "genre_id" %>
          </div>
          <div class="form_group">
            <%= f.label :"税抜価格" %>
            <%= text_field :price %>円
          </div>
          <div class="form_group">
            <%= f.label :"販売ステータス" %>
            <%= f.select :is_active, [["販売中",true],["販売停止中",false]], prompt: "--選択してください--", class: "is_active" %>
          </div>
        </table>
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>