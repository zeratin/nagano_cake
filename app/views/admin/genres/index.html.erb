<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">ジャンル一覧・追加</h2>
      <%= form_with model:@genre, :url => {:action => :create}, local:true do |f| %>
        <%= render "layouts/error_messages", resource: @genre %>
        <div class="col-xs-offset-1">
          <i class="fas fa-candy-cane"></i>ジャンル
          <%= f.text_field :name  %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_sctive, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= f.submit "追加", class: "btn btn-info" %>
        </div>
      <% end %>