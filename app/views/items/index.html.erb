<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render 'items/search',  genres: @genres %>
    </div>

    <div class="col-xs-9">
      <div class="">


        <h2><%= @title %>一覧</h2>
        <h4>全<%= @items.count %>件</h4>
      </div>
      <div class="item-index">
        <% @items.each do |item| %>
        <% if item.genre.is_active %>
          <div class="items-list">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 180, 120, format: 'jpeg' %><br>
            <% end %>
            <%= item.name %><br>
            ¥<%= tax_included_price(item.price) %>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

